{
  "name": "ts-template",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getnimbus/ts-template.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "modern",
    "starter",
    "debugging",
    "ts",
    "prettier",
    "typescript5",
    "CI/CD",
    "minimal"
  ],
  "author": "Toan Ho <toanho@getnimbus.io>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p build:watch start:watch",
    "build": "swc src -d dist --copy-files",
    "build:watch": "swc src -d dist --copy-files --watch",
    "start": "dotenv -- node dist/src/index.js",
    "start:watch": "dotenv -- nodemon dist/src/index.js",
    "clean": "rimraf dist",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint-check": "eslint .",
    "test": "glob \"src/**/*.test.ts\" \"test/**\" -c \"node --test\""
  },
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.18",
    "@tsconfig/node20": "20.1.4",
    "@types/node": "20.12.7",
    "@types/nodemon": "1.19.6",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "glob": "10.3.12",
    "nodemon": "3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "typescript": "5.4.5"
  }
}
