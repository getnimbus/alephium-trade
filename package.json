{
  "name": "alephium-trade",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getnimbus/alephium-trade.git"
  },
  "keywords": [
    "alephium",
    "indexer",
    "trade-data",
    "dex"
  ],
  "author": "Toan Nhu <toannhu@getnimbus.io>",
  "license": "MIT",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "run-p build:watch start:watch | pino-pretty",
    "build": "swc src -d dist --copy-files",
    "build:watch": "swc src -d dist --copy-files --watch",
    "start": "dotenv -- node dist/src/index.js",
    "start:watch": "dotenv -- nodemon dist/src/index.js",
    "clean": "rimraf dist",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint-check": "eslint .",
    "test": "glob \"src/**/*.test.ts\" \"test/**\" -c \"node --test\""
  },
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.18",
    "@tsconfig/node20": "20.1.4",
    "@types/node": "20.12.7",
    "@types/nodemon": "1.19.6",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "glob": "10.3.12",
    "nodemon": "3.1.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.0.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.6.0",
    "@prisma/client": "^6.6.0",
    "kafkajs": "^2.2.4",
    "kafkajs-snappy": "^1.1.0",
    "pino": "^9.6.0",
    "prisma": "^6.6.0"
  }
}
