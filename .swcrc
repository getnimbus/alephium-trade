{
  "$schema": "http://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "target": "es2020",
    "paths": {
      "src/*": ["./src/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@configs/*": ["src/configs/*"],
      "@utils/*": ["src/utils/*"]
    },
    "baseUrl": "."
  },
  "module": {
    "type": "commonjs"
  }
}
