generator client {
  provider        = "prisma-client-js"
  /// DO NOT DELETE `linux-arm64-openssl-3.0.x` because this file is required for Lambda ARM64
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
  previewFeatures = ["views", "driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserAccount {
  id            String   @id @default(uuid()) @db.Uuid
  publicAddress String
  type          String
  chain         String?
  accountId     String
  name          String?
  displayName   String?
  logo          String?
  label         String?
  position      Int      @default(9999)
  category      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("user_accounts")
}
